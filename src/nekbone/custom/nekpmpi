#!/bin/sh
# This is best used inside another script; see run-nek.sh
if [ "$#" -ne 3 ]; then
	echo "usage: ./nekpmpi <topology> <number of processors> <experiment>"
	exit 1
fi
smpirun -hostfile "../../../../topologies/hostfile-$1.txt" \
	-platform "../../../../topologies/$1.xml" \
	--cfg=smpi/host-speed:90000000000f \
	-np $2 ./nekbone 1 > "../../experiments/log-$1-np$2-$3.txt"

